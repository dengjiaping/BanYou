<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.quanliren.quan_one.activity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/pic_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp" >
    </FrameLayout>

    <!--
         <com.quanliren.quan_one.custom.CustomPicWall 
        android:orientation="horizontal"
        android:id="@+id/pic_wall"
        android:layout_width="fill_parent"
    -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/pic_contents"
        android:background="#ADFFFFFF"
        android:orientation="vertical"
        android:paddingLeft="75dp" >

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/nickname"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/nickname"
            android:background="@drawable/boy_icon"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/xingzuo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sex"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignTop="@id/nickname"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/xingzuo_txt"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/vip_text_icon" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.quanliren.quan_one.custom.CircleImageView
        android:id="@+id/userlogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/pic_contents"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/defalut_logo"
        app:border_color="#FFFFFF"
        app:border_width="2dp" />

</RelativeLayout>